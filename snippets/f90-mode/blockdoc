# -*- mode: snippet; require-final-newline: nil -*-
# name: block comment
# key: bc
# --
!${1:`
(let* ((here (point))
       (beg
        (save-excursion
          (beginning-of-line)
          (point)))
       (remain (- (+ 3 default-fill-column) (- here beg)))
       (i 0))
  (with-temp-buffer
    (while (<= (setq i (1+ i)) remain)
      (insert "-"))
    (buffer-string)))
`}
! $0
!$1
