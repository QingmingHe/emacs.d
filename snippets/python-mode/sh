import matplotlib
import matplotlib.pyplot as plt
plt.rcParams['font.serif'] = ['NSimSun']
plt.rcParams['font.family'] = 'serif'
plt.rcParams['axes.unicode_minus'] = False
matplotlib.rcParams.update({'font.size': 15,
                            'legend.fontsize': 15})
